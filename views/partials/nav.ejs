<body>
<header class="navbar">
  <nav class="nav-container">
    <ul class="flex flex-wrap items-center gap-1">
      <!-- Home -->
      <li>
        <a
          href="/"
          class="<%= currentPage === 'index' ? 'bg-white text-red-500 font-semibold' : 'hover:bg-red-400' %> py-2 px-4 rounded-lg transition duration-300"
        >
          StayNest
        </a>
      </li>

      <!-- Guest User Options -->
      <% if (isLoggedIn) { %>
        <% if (user && user.userType === 'guest') { %>
          <li>
            <a
              href="/homes"
              class="<%= currentPage === 'Home' ? 'bg-white text-red-500 font-semibold' : 'hover:bg-red-400' %> py-2 px-4 rounded-lg transition duration-300"
            >Homes-List</a>
          </li>
          <li>
            <a
              href="/favourites"
              class="<%= currentPage === 'favourites' ? 'bg-white text-red-500 font-semibold' : 'hover:bg-red-400' %> py-2 px-4 rounded-lg transition duration-300"
            >Bookings</a>
          </li>
        <% } else { %>
          <!-- Host Options -->
          <li>
            <a
              href="/host/host-home-list"
              class="<%= currentPage === 'host-homes' ? 'bg-white text-red-500 font-semibold' : 'hover:bg-red-400' %> py-2 px-4 rounded-lg transition duration-300"
            >Host Homes</a>
          </li>
          <li>
            <a
              href="/host/add-home"
              class="<%= currentPage === 'addHome' ? 'bg-white text-red-500 font-semibold' : 'hover:bg-red-400' %> py-2 px-4 rounded-lg transition duration-300"
            >Add Home</a>
          </li>
        <% } %>
      <% } %>

      <!-- Auth Buttons -->
      <% if (!isLoggedIn) { %>
        <li>
          <a href="/signup" class="hover:bg-red-400 py-2 px-4 rounded-lg transition duration-300">Signup</a>
        </li>
        <li>
          <a href="/login" class="hover:bg-red-400 py-2 px-4 rounded-lg transition duration-300">Login</a>
        </li>
      <% } else { %>
        <li>
          <form action="/logout" method="POST">
            <button
              type="submit"
              class="hover:bg-red-400 py-2 px-4 rounded-lg transition duration-300"
            >Logout</button>
          </form>
        </li>
      <% } %>
    </ul>
  </nav>
</header>
<!-- Add this after your header in your main layout file to prevent content being hidden behind navbar -->

 <div class="content">
    <!-- Your main page content -->
  </div>
  </body>